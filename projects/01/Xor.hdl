/**
 * Exclusive-or gate:
 * out = not (a == b)
 */

CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    Not(in=a, out=notA);
    Not(in=b, out=notB);
    Or(a=notA, b=notB, out=notAOrNotB);
    Or(a=a, b=b, out=aOrB);
    And(a=notAOrNotB, b=aOrB, out=out);
}
